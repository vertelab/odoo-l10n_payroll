        <template id="l10n_se_hr_payroll_payslip_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="l10n_se_hr_payroll.external_layout">
                        <div class="row" style="padding-bottom:30px;">
                            <div style="width: 50%;">
                                <span t-field="o.contract_id.name"/>
                                <br />
                                <span t-field="o.employee_id.job_id" />
                            </div>
                            <div class="col-xs-12" style="padding-left: 70px;">
                                <span t-field="o.employee_id.name" style="border-bottom: 1px solid black;" />
                                <br />
                                <span t-esc="o.employee_id.address_home_id.street" />
                                <t t-if="o.employee_id.address_home_id.street2">
                                    <br />
                                    <span t-esc="o.employee_id.address_home_id.street2"/>
                                </t>
                                <t t-if="o.employee_id.address_home_id.zip">
                                    <br />
                                    <span t-esc="o.employee_id.address_home_id.zip"/>
                                </t>
                                <t t-if="o.employee_id.address_home_id.city">
                                    <br />
                                    <span t-esc="o.employee_id.address_home_id.city"/>
                                </t>
                                <t t-if="o.employee_id.address_home_id.state_id.name">
                                    <br />
                                    <span t-esc="o.employee_id.address_home_id.state_id.name"/>
                                </t>
                                <t t-if="o.employee_id.address_home_id.country_id.name">
                                    <br />
                                    <span t-esc="o.employee_id.address_home_id.country_id.name"/>
                                </t>
                            </div>
                        </div>
                        
                        <div class="page">
                            <!-- <h2 t-field="o.name"/> -->

                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Löneart</th>
                                        <th>Kod</th>
                                        <th>Benämning</th>
                                        <th style="text-align: center;">Kvantitet</th>
                                        <th style="text-align: center;">Procent</th>
                                        <th style="text-align: center;">A-pris</th>
                                        <th style="text-align: right;">Belopp</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.line_ids" t-as="pa">                                    
                                        <t t-if="not int(o.get_slip_line(pa.code)[0]['amount']) == 0">
                                        <t t-if="pa.salary_rule_id.appears_on_payslip">
                                            <tr style="background: #eee;">
                                                <td style="border-right: 1px solid black;">
                                                    <span>
                                                        <t t-esc="pa.salary_rule_id.salary_art"/>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span>
                                                        <t t-esc="pa.code" />
                                                    </span>
                                                </td>
                                                <td>
                                                    <t t-esc="pa.name" />
                                                </td>
                                                <td style="text-align: center;">
                                                    <span t-esc="pa.quantity" />
                                                </td>
                                                <td style="text-align: center;">
                                                    <t t-esc="pa.rate"></t>
                                                </td>
                                                <td style="text-align: center;">
                                                    <t t-esc="int(o.get_slip_line(pa.code)[0]['amount']) if len(o.get_slip_line(pa.code)) &gt; 0 else 0"/>
                                                </td>
                                                <td style="text-align: right; border-left: 1px solid black;">
                                                    <!-- <t t-if="o.get_slip_line(pa.code)[0]['payslip_character'] == 'minus'">
                                                        <span>- </span><t t-esc="str(int(o.get_slip_line(pa.code)[0]['total']))"/>
                                                    </t>
                                                    <t t-elif="o.get_slip_line(pa.code)[0]['payslip_character'] == 'parentheses'">
                                                        <span>(</span><t t-esc="str(int(o.get_slip_line(pa.code)[0]['total']))"/><span>)</span>
                                                    </t>
                                                    <t t-else="">
                                                        <t t-esc="str(int(o.get_slip_line(pa.code)[0]['total']))"/>
                                                    </t> -->
                                                    <t t-esc="int(o.get_slip_line(pa.code)[0]['total'])"/>
                                                </td>

                                            </tr>
                                        </t>
                                        </t>
                                    </t>
                                </tbody>    
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>


        <report id="l10n_se_hr_payroll.payslip" model="user.payslip" string="Payslip SE" report_type="qweb-pdf" name="l10n_se_hr_payroll.l10n_se_hr_payroll_payslip_document" file="l10n_se_hr_payroll.l10n_se_hr_payroll_payslip_document" attachment_use="True" attachment="('payslip_'+(object.number.replace('/','') if object.number else ''))+'.pdf'" />

        <record id="payslip_pdf_format" model="report.paperformat">
            <field name="name">Payslip pdf format</field>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">37</field>
            <field name="margin_bottom">85</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

    </data>
</odoo>